<body>
  <center>
    <div class="row">
      <div class="large-12 columns">
        <h3>New Releases</h3>
        <hr />

        <div class="row">
          <ul class="large-block-grid-4">
            <% @newrelease.each do |movie| %>

            <li>
              <div class="poster">
                <%= image_tag movie.movie_image.url %>
              </div>

              <div class="panel">
                <%= "Movie Title: " %><br/>
                <%= movie.title  %><br />
                <%= "Movie genre: " %><br/>
                <%= movie.genre  %><br />
                <br />
                <%= link_to "Buy Ticket", :controller => "bookings", :action => "prebooking", :mov_id => movie.id, :class => 'button' %>
              </div>
            </li><% end %>
          </ul>
        </div>
      </div>
    </div>
